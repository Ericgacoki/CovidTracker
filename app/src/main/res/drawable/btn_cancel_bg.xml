<selector xmlns:android1="http://schemas.android.com/apk/res/android" android1:enterFadeDuration="50" android1:exitFadeDuration="50">

    <item android1:state_pressed="true">
        <shape android1:shape="rectangle">
            <solid android1:color="@color/colorBtnClicked" />
            <corners android1:radius="10dp" />
        </shape>
    </item>

    <item android1:state_enabled="true">
        <shape android1:shape="rectangle">
            <solid android1:color="@color/colorBtnCancelEnabled" />
            <corners android1:radius="10dp" />
        </shape>
    </item>

</selector>